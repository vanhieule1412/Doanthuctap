@model doanthuctap.Models.KHANHHANG

@{
    ViewBag.Title = "Fromthemkhachhang";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<form action="@Url.Content("/KhachHang/themkhachhang")" method="post">    
    <div class="form-horizontal">

        <h4>Khách hàng</h4>
        <hr />
          <a class="btn btn-primary" href="@Url.Content("/KhachHang/IndexKH")">Danh sách khách hàng</a>
 
        <hr/>

        <div class="form-group">
            <label>Tên khách hàng :</label>
            <div class="col-md-10">
                <input type="hidden" name="Makh" value="KH" />
                <input  required type="text" class="form-control" name="Tenkh">
            </div>
        </div>

        <div class="form-group">
           <label>Địa chỉ :</label>
           <div class="col-md-10">
               <input required type="text" class="form-control" name="Diachi">
           </div>
        </div>

        <div class="form-group">
            <label> Điện thoại :</label>
            <div class="col-md-10">
                <input type="number" class="form-control" name="Dienthoai">
            </div>
        </div>

        <div class="form-group">
            <label>Số CMND :</label>
            <div class="col-md-10">
                <input required type="number" class="form-control" name="CMND">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>


