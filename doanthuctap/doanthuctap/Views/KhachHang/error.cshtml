@model doanthuctap.Models.KHACHHANG

@{
    ViewBag.Title = "Formxoakhachhang";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Xóa Khách hàng</h2>

<h5 class="bg-danger">Khách hàng đã sở hữu điện kế !</h5>
<div>
    <h4>Thông tin khách hàng </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã khách hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Makh)
        </dd>

        <dt>
            Tên khách hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tenkh)
        </dd>

        <dt>
            Địa chỉ :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>

        <dt>
            Số điện thoại :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dienthoai)
        </dd>

        <dt>
            Số CMND :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CMND)
        </dd>

    </dl>

    @using (Html.BeginForm("xoakhachhang", "KhachHang", new { id = Model.Makh }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>
    }
    <a class="btn btn-primary" href="@Url.Content("/KhachHang/IndexKH")"> <<</>Trở lại</a>
</div>
